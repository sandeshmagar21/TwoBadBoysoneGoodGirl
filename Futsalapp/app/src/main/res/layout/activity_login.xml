<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fa"
    tools:context=".Login">

    <EditText
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:background="#C4ED93"
        android:gravity="center"
        android:text="LOGIN"
        android:textColorHint="#272222"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/login_email_id"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:hint="Enter email address"
        android:textColorHint="#1B1A1A" />

    <EditText
        android:id="@+id/login_password_id"
        android:layout_width="275dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:hint="Enter Password"
        android:textColorHint="#121111"
        android:textSize="18sp" />

    <Button
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#E1E4DE"
        android:hint="Login"
        android:onClick="Login"
        android:textColorHint="#201E1E"
        android:textSize="24sp" />

</LinearLayout>